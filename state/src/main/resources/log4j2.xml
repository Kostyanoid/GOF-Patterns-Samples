<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-6level %-17logger{1} - %msg%n}{INFO=green, TRACE=blue}" disableAnsi="false"/>
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.rk.samples.gofpatterns.state.model" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>